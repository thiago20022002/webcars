<div class="col-md-3"></div> 
<div ng-controller="postCtrl" class="col-md-6" id="postAdScopeID">
    <form role="form" id="postAdForm">
        <fieldset>
            <!-- Form Name -->
            <legend>Post Car Ad</legend>
            <!-- Text input-->

            <div class="form-group">
                <h4>Car Information</h4>  
            </div>
            <div class="form-group">
                <input class="form-control input-sm" name="make" ng-model="postData.make" type="text" placeholder="car manufacturer" >
            </div>
            <!-- Text input-->
            <div class="form-group">
                <input class="form-control input-sm"  name="model" ng-model="postData.model" type="text" placeholder="car model" >
            </div>
            <!-- Text input-->
            <div class="form-group">
                <input class="form-control input-sm" name="year" ng-model="postData.year" type="text" placeholder="year of the car " >
            </div>

            <div class="form-group">
                <h4>Users Input</h4>  
            </div>
            <!-- Text input-->
            <div class="form-group">
                <input class="form-control input-sm"  name="price" ng-model="postData.price" type="text" placeholder="price in USD ">
            </div>
            <!-- Text input-->
            
            <div class=" form-group">
                <h4>Select car image</h4>
            </div>
            <div class=" form-group   groupContainer input-group input-group-md col-md-12">

                <span  class="btn btn-default col-md-6" onclick="loadDefaultImage('car')">   <i class="fa fa-picture-o" aria-hidden="true"></i> Default</span>

                <span class="fileUpload btn btn-default col-md-6">
                    <span><i class="fa fa-upload"></i> Upload</span>

                    <input id="imageFile" type="file" class="upload" />
                </span>
            </div>

            <div class=" form-group">
                <center>
                    <img id="imageViewer" src="/images/carDefaultImage.jpg" height="50" alt="Image preview...">
                </center>
                <span name="urlFile"></span>
            </div>
            <!-- Textarea -->
            <div class="form-group">
                <textarea class="form-control input-sm" name="description"  ng-model="postData.description" placeholder="car description"></textarea>
            </div>

            <!-- Button -->
            <div class="form-group">
                <button type="submit" id="submit" name="submit" class="form-control btn btn-primary btn-sm">submit</button>
            </div>

        </fieldset>
        <script src="/js/customsjs/validation/postAds.js"></script>
    </form>

</div>
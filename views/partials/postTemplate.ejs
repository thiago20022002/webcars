<div class="col-md-4"></div> 
<div ng-controller="postCtrl" class="col-md-4">
    <form role="form" ng-submit="sendAdPost()">
        <fieldset>
            <!-- Form Name -->
            <legend>Post Car Ad</legend>
            <!-- Text input-->

            <div class="form-group">
                <h4>Car Information</h4>  
            </div>
            <div class="form-group">
                <input class="form-control input-sm"  ng-model="postData.make" type="text" placeholder="car make" >
            </div>
            <!-- Text input-->
            <div class="form-group">
                <input class="form-control input-sm"   ng-model="postData.model" type="text" placeholder="car model" >
            </div>
            <!-- Text input-->
            <div class="form-group">
                <input class="form-control input-sm"  ng-model="postData.year" type="text" placeholder="car year  - MUST BE NUMBER" >
            </div>
            <hr>
            <div class="form-group">
                <h4>Users Input</h4>  
            </div>
            <!-- Text input-->
            <div class="form-group">
                <input class="form-control input-sm"   ng-model="postData.price" type="text" placeholder="desired price in USD - MUST BE NUMBER">
            </div>
            <!-- Text input-->
            <div class="form-group">
                <input class="form-control input-sm"   ng-model="postData.imageUrl" type="text" placeholder="path to image" >
            </div>
            <!-- Textarea -->
            <div class="form-group">
                <textarea class="form-control input-sm"  ng-model="postData.description" placeholder="car description"></textarea>
            </div>

            <!-- Button -->
            <div class="form-group">
                <button type="submit" id="submit" name="submit" class="form-control btn btn-primary btn-sm">submit</button>
            </div>

        </fieldset>
    </form>

</div>
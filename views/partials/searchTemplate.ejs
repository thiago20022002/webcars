

<div class="col-md-12 search-bar">

    <div class='col-md-1'>
    </div>
    <div class='col-md-10'>
        <form class="form-inline" ng-submit="searchOption()" role="form" >
            <div class="form-group input-group input-group-md col-md-2">

                <input type="text" id='searchZipCode' class="form-control input-md " ng-model="searchData.zipCode" placeholder="zip code"/>
                <span class="input-group-addon" > <i class="fa fa-map-pin"></i></span>
            </div>
            <div class="form-group">
                <label class="filter-col" style="margin-right:0;" for="pref-perpage">Mile radius</label>
                <select class="form-control" id="optionSelect">
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option selected="selected" value="50">50</option>
                    <option value="75">75</option>
                    <option value="100">100</option>
                </select>
            </div>

            <div class="form-group">
                <label class="filter-col" style="margin-right:0;" for="pref-perpage">Search by</label>
                <select class="form-control">
                    <option selected="selected" value="50">Make</option>
                    <option value="10">Year</option>
                    <option value="25">Model</option>
                </select>
            </div>


            <div class="form-group">
                <input type="text" id="searchQuery" class="input-group-lg form-control" placeholder="Search">   
                <button  class="btn btn-default" type="submit" ><i class="fa fa-search"></i> search</button>
            </div>
        </form>
    </div>
    <div class='col-md-1'>
    </div>

</div>



<div ng-controller="loginCtrl" id="singinScopeID">
    <form role="form" id="signinForm">
        <fieldset>
            <!-- Form Name -->
            <legend>Login</legend>
            <div ng-if="error == true">
                <div class="alert alert-danger"><strong>Error </strong>{{errorMessage}}</div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-md">
                    <span class="input-group-addon" > <i class="fa fa-user"></i></span>
                    <input type="text" class="form-control input-md" ng-model="loginData.username" name="username" placeholder="Username"/>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-md">
                    <span class="input-group-addon" ><i class="fa fa-key"></i> </span>
                    <input type="password" class="form-control input-md" ng-model="loginData.password" name="password" placeholder="Password"/>
                </div>
            </div>
            <button type="submit" class="btn btn-primary form-control btn-md">Log in</button>
            <hr>
            <div>New user</div>
            <span>
                <a href="/register" > 
                    <button class="btn btn-success btn-md form-control"> Sign up</button>
                </a>
            </span>
        </fieldset>
    </form>
    <script src="/js/customsjs/validation/signin.js"></script>
</div>
